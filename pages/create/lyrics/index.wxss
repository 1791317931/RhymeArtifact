.lyrics-container {
  padding-bottom: 20rpx;
}

.top-btn-container {
  padding: 20rpx 57rpx;
  background: #fff;
}

.top-btn-container button {
  display: inline-block;
  width:280rpx;
  height:70rpx;
  line-height:70rpx;
  background:rgba(255,255,255,1);
  border-radius:14rpx;
  border:2rpx solid rgba(0,0,0,1);
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  letter-spacing:1rpx;
}

.top-btn-container button:not(:first-child) {
  float: right;
}

.edit-container {
  padding: 30rpx 20rpx 0;
  line-height:96px;
  font-size:32rpx;
}

.edit-container .song-title-keyword {
  height:96rpx;
  padding: 0 20rpx 0 190rpx;
  background:rgba(255,255,255,1);
  border-radius:14rpx;
  position: relative;
}

.edit-container .song-title-keyword view {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-family:PingFangSC-Medium;
  font-weight:400;
  color:rgba(29,29,29,1);
  letter-spacing:1rpx;
}

.edit-container .song-title-keyword input {
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-family:PingFangSC-Medium;
  font-weight:400;
  color:rgba(29,29,29,1);
}

.search-lyric-wrapper {
  padding: 40rpx 0 10rpx;
}

.content-container {
  width: 710rpx;
  background:rgba(255,255,255,1);
  border-radius:14rpx;
  margin: 30rpx auto 0;
}

.content-container textarea {
  padding: 10rpx 30rpx 0;
  font-size:32rpx;
  width: 100%;
  font-family:PingFangSC-Medium;
  font-weight:400;
  color:rgba(29,29,29,1);
  line-height:70rpx;
  letter-spacing:1rpx;
}

.input-placeholder {
  line-height: 96rpx;
  color: #999;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
}

.textarea-placeholder {
  color: #999;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
}