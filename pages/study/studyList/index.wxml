<view class="tab-container">
  <view class="clearfix" style="width: {{tabWidth}}px">
    <view wx:for="{{tabs}}" wx:for-item="item" wx:for-index="index" wx:key="{{item.flag || item.id}}"
    class="tab-item {{activeIndex == index ? 'active' : ''}}" data-index="{{index}}" catchtap="toggleTab">
      {{item.name}}
    </view>
  </view>
</view>
<canvas class="poster-canvas" canvas-id="poster-canvas"/>
<musicPoster id="musicPosterComponent"/>
<image hidden="{{isAudient}}" class="activity" src="/assets/imgs/study/activity.png" catchtap='toActivity' />
<view class="study-wrapper">
  <view class="music-container {{tabs[activeIndex].flag == 'music' ? 'active' : ''}}">
    <createMusicList id="musicComponent"/>
  </view>
  <view hidden="{{tabs[activeIndex].flag != 'article'}}">
    <studyArticleList id="articleComponent"/>
  </view>
  <view hidden="{{tabs[activeIndex].flag}}">
    <studyVideoList id="videoComponent"/>
  </view>
</view>