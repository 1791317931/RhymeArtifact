.video-container {
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  padding: 422rpx 0 0;
}

.adver {
  padding: 20rpx 30rpx;
}

.adver ad {
  border-radius: 20rpx;
}

.video {
  display: block;
  width: 750rpx;
  height: 422rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.video-container .show-ad-container, .video-container .show-buy-container {
  position: absolute;
  width: 750rpx;
  height: 422rpx;
  top: 0;
  left: 0;
  background: linear-gradient(to bottom,  rgba(0, 0, 0, .5), transparent);
  z-index: 1;
}

.video-container .show-ad-container .tip {
  width: 400rpx;
  height:78rpx;
  line-height:78rpx;
  background:rgba(255,255,255,1);
  border-radius:14rpx;
  border:2rpx solid rgba(255,255,255,1);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size:26rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: center;
}

.video-container .show-buy-container .inner {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 100%;
}

.video-container .show-buy-container .description {
  font-size:34rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:48rpx;
  text-align: center;
}

.video-container .show-buy-container .buy {
  margin: 50rpx auto 0;
  display: block;
  width:432rpx;
  height:78rpx;
  line-height: 78rpx;
  background:rgba(197,167,99,1);
  border-radius:14rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(67,54,34,1);
  text-align: center;
}

.title-container {
  width: 750rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  border-bottom: 1rpx solid rgba(147,147,147,0.45);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.bottom-container {
  position: fixed;
  top: 522rpx;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: auto;
  padding: 0 0 50rpx;
  background: #fff;
}

.operation-container {
  padding: 20rpx 50rpx;
}

.operation-container .poster-share-container {
  float: left;
  width:310rpx;
  height:78rpx;
  text-align: center;
  border-radius:14rpx;
  border:2rpx solid rgba(0,0,0,1);
  position: relative;
}

.operation-container .poster-share-container image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.operation-container .poster-share-container text {
  margin-left: 10rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  line-height: 78rpx;
}

.operation-container .wechat-share-container {
  float: right;
  width:310rpx;
  height:78rpx;
  text-align: center;
  border-radius:14rpx;
  border:2rpx solid rgba(0,0,0,1);
  position: relative;
}

.operation-container .wechat-share-container image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.operation-container .wechat-share-container text {
  margin-left: 10rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  line-height: 78rpx;
}

.operation-container .wechat-share-container button {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  opacity: 0;
}

.bottom-container .split-container {
  height: 10rpx;
  background: rgb(247, 247, 247);
}

.video-list-wrapper {
  padding: 0 30rpx;
}

.video-list-wrapper .list-label {
  line-height: 88rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(96,96,96,1);
}

.video-list-inner {
  padding: 5rpx 0;
}

.video-list-inner .item {
  height: 163rpx;
}

.video-list-inner .item:not(:first-child) {
  margin-top: 56rpx;
}

.video-list-inner .item .left-container {
  width: 290rpx;
  height: 163rpx;
  float: left;
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
}

.video-list-inner .item .left-container image {
  width: 290rpx;
  height: 163rpx;
}

.video-list-inner .item .left-container .status {
  height:44rpx;
  background:rgba(0,0,0,.4);
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  padding: 0 8rpx;
}

.video-list-inner .item .left-container .status:after {
  content: '';
  display: block;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:44rpx;
}

.video-list-inner .item .left-container .is-free:after {
  content: '试看';
}

.video-list-inner .item .left-container .not-free:after {
  content: '收费';
}

.video-list-inner .item .left-container .status.active {
  right: 0;
  bottom: 0;
  padding: 0 13rpx 0 21rpx;
}

.video-list-inner .item .left-container .status.active:before {
  content: '';
  width:5rpx;
  height:5rpx;
  background:rgba(79,255,79,1);
  position: absolute;
  top: 50%;
  left: 9rpx;
  transform: translateY(-50%);
}

.video-list-inner .item .left-container .status.active:after {
  content: '正在播放';
}

.video-list-inner .item .right-container {
  width: 376rpx;
  height: 163rpx;
  float: right;
  position: relative;
}

.video-list-inner .item .right-container .title {
  font-size:32rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:50rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.video-list-inner .item .right-container .play-desc {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:30rpx;
}