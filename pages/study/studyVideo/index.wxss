.video-container {
  background: #fff;
}

.video {
  display: block;
  width: 750rpx;
  height: 422rpx;
}

.title-container {
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  box-shadow:0px 0px 30rpx 0px rgba(147,147,147,0.45);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.bottom-container {
  height: 690rpx;
  overflow: auto;
}

.operation-container {
  padding: 20rpx 50rpx;
  background: #fff;
}

.operation-container .poster-share-container {
  float: left;
  width:310rpx;
  height:78rpx;
  text-align: center;
  border-radius:14rpx;
  border:2rpx solid rgba(0,0,0,1);
  position: relative;
}

.operation-container .poster-share-container image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.operation-container .poster-share-container text {
  margin-left: 10rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  line-height: 78rpx;
}

.operation-container .poster-share-container button {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  opacity: 0;
}

.operation-container .wechat-share-container {
  float: right;
  width:310rpx;
  height:78rpx;
  text-align: center;
  border-radius:14rpx;
  border:2rpx solid rgba(0,0,0,1);
  position: relative;
}

.operation-container .wechat-share-container image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.operation-container .wechat-share-container text {
  margin-left: 10rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  line-height: 78rpx;
}

.operation-container .wechat-share-container button {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  opacity: 0;
}

.video-list-wrapper {
  margin-top: 10rpx;
  background: #fff;
  padding: 0 30rpx;
}

.video-list-wrapper .list-label {
  line-height: 88rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(96,96,96,1);
}

.video-list-inner {
  padding: 5rpx 0;
}

.video-list-inner .item {
  height: 163rpx;
}

.video-list-inner .item:not(:first-child) {
  margin-top: 56rpx;
}

.video-list-inner .item .left-container {
  width: 290rpx;
  height: 163rpx;
  float: left;
  position: relative;
}

.video-list-inner .item .left-container image {
  width: 290rpx;
  height: 163rpx;
  border-radius: 10rpx;
}

.video-list-inner .item .right-container {
  width: 376rpx;
  height: 163rpx;
  float: right;
  position: relative;
}

.video-list-inner .item .right-container .title {
  font-size:32rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:50rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.video-list-inner .item .right-container .play-desc {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:30rpx;
}