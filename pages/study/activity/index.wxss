page {
  background: #fff;
}

.activity {
  display: block;
  margin: 30rpx auto 0;
  width:670rpx;
  height:268rpx;
}

.tab-container {
  width: 100%;
  height: 90rpx;
  overflow: auto;
  padding: 0 30rpx;
}

.tab-container .tab-item {
  float: left;
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(4,4,4,1);
  position: relative;
}

.tab-container .tab-item.active {
  color:rgba(0,0,0,1);
}

.tab-container .tab-item.active:after {
  content: '';
  width:25rpx;
  height:7rpx;
  background:rgba(29,29,29,1);
  border-radius:4rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10rpx;
}

.list-container {
  padding: 30rpx 0 60rpx;
}