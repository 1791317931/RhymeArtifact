.search-entry {
  position: relative;
  padding: 12rpx 24rpx 0;
}

.search-entry .icon {
  position: absolute;
  top: 34rpx;
  left: 54rpx;
  width: 32rpx;
  height: 32rpx;
}

.search-entry .txt {
  padding: 20rpx 72rpx;
  height: 76rpx;
  line-height: 36rpx;
  font-size: 32rpx;
  color: #888;
  border-radius: 38rpx;
  background-color: #FAFAFA;
  box-size: border-box;
}

.top-swiper {
  overflow: hidden;
  margin: 22rpx 24rpx 0;
  height: 220rpx;
  border-radius: 10rpx;
}

.top-swiper .img {
  display: block;
  width: 100%;
  height: 220rpx;
}

.menu {
  display: flex;
  justify-content: space-around;
  padding-top: 48rpx;
}

.menu-item {
  width: 120rpx;
  text-align: center;
}

.menu-item image {
  width: 80rpx;
  height: 80rpx;
}

.menu-title {
  padding-top: 12rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #333;
}

.wrapper {
  position: relative;
}

.mask {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  background: #fff;
  z-index: 100;
}