<loadModal id="loadModalComponent"/>
<view class="cover-info">
  <image src="{{beat.cover}}" class="cover" />
  <view class="title">{{beat.title}}</view>
  <view class="author">{{beat.author}}</view>
</view>
<view class="play-info">
  <view class="progress">
    <view class="progress-bar">
      <view class="circle-bar"></view>
    </view>
  </view>
  <view class="time-info">
    <view class="play-time">{{playTimeArr[1]}}:{{playTimeArr[2]}}</view>
    <view class="total-time">{{totalTimeArr[1]}}:{{totalTimeArr[2]}}</view>
  </view>
</view>
<view class="play-option">
  <image class="prev" src="/assets/imgs/mall/prev.png"/>
  <image hidden="{{playing}}" class="play" src="/assets/imgs/mall/to-play.png"/>
  <image hidden="{{!playing}}" class="play" src="/assets/imgs/mall/to-pause.png"/>
  <image class="next" src="/assets/imgs/mall/next.png"/>
</view>
<view class="option">
  <view class="item" catchtap="showListModal">
    <image src="/assets/imgs/mall/play-list.png"/>
  </view>
  <view class="item" catchtap="showCommentModal">
    <image src="/assets/imgs/mall/comment.png"/>
  </view>
  <view class="item">
    <image src="/assets/imgs/mall/collection-big.png"/>
    <!-- <image src="/assets/imgs/mall/collection-active-big.png"/> -->
  </view>
  <view class="buy">
    <image src="/assets/imgs/mall/btn-shopcar.png"/>
    <view>去购买</view>
  </view>
</view>
<view hidden="{{!showList}}">
  <view class="mask" catchtap="closeListModal"></view>
  <view class="list-wrapper">
    <beatList id="beatComponent" />
  </view>
</view>
<view hidden="{{!showCommentList}}">
  <view class="mask" catchtap="showCommentModal"></view>
  <view class="list-wrapper">
    <commentList id="commentComponent" />
  </view>
</view>