.authorition-container {
  width: 100%;
  height: 100%;
  background: #fff;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100000;
}

.middle-container {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  text-align: center;
}

.logo {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
}

.tip-desc {
  margin-top: 46rpx;
  line-height:46px;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  color:rgba(51,51,51,1);
}

.btn-group {
  margin-top: 80rpx;
  padding: 0 100rpx;
}

.btn-group button {
  width: 250rpx;
  display: inline-block;
  line-height:88rpx;
  background:rgba(37,37,37,1);
  border-radius:14rpx;
  font-size:32rpx;
  font-family:PingFangSC-Light;
  color:rgba(255,255,255,1);
  letter-spacing:1rpx;
}

.btn-group button:not(:first-child) {
  margin-left: 50rpx;
}