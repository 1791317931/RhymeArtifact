.address-wrapper {
  position: relative;
  padding: 0 0 145rpx;
}

.to-add {
  width: 100%;
  height: 145rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 13rpx 0 0;
}

.to-add button {
  margin: 0 auto;
  width:510rpx;
  height:88rpx;
  background:rgba(1,1,1,1);
  border-radius:44rpx;
  font-size:32rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(255,255,255,1);
  line-height:88rpx;
  letter-spacing:1rpx;
}