.adver {
  padding: 20rpx 30rpx 40rpx 30rpx;
  background: #fff;
}

.adver ad {
  border-radius: 10rpx;
  height: 200rpx !important;
}

.content-body {
  padding: 30rpx;
}

.content-body .user-info {
  height: 180rpx;
  background: #fff;
  position: relative;
  padding: 30rpx 40rpx 30rpx 190rpx;
}

.content-body .user-info .head-img {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 40rpx;
  top: 30rpx;
  border-radius: 50%;
}

.content-body .user-info .name {
  margin-top: 10rpx;
  font-size:36rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(38,38,38,1);
  line-height:50rpx;
  letter-spacing:1rpx;
}

.content-body .user-info .works-container {
  margin-top: 20rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(152,152,152,1);
  line-height:30rpx;
}

.content-body .user-info .works-container view {
  float: left;
  max-width: 250rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.content-body .user-info .works-container view text {
  font-size:28rpx;
  font-family:DINAlternate-Bold;
  font-weight:bold;
  color:rgba(26,26,26,1);
  margin-left: 10rpx;
  line-height:30rpx;
}

.content-body .user-info .works-container view:last-child {
  margin-left: 40rpx;
}

.content-body .rank-list {
  width: 100%;
  height: 210rpx;
  background:linear-gradient(225deg,rgba(254,115,115,1) 0%,rgba(250,61,150,1) 100%);
  border-radius:18rpx;
  display: block;
}

.content-body .freestyle-record {
  width: 100%;
  height: 210rpx;
  background:linear-gradient(225deg,rgba(32,10,43,1) 0%,rgba(70,19,130,1) 100%);
  border-radius:18rpx;
  display: block;
}