.clearfix:before {
  content: ' ';
  display: table !important;
}
.clearfix:after {
  content: ' ';
  display: table !important;
  clear: both;
}

.tab-container {
  overflow-x: auto;
  padding: 30rpx 40rpx;
}

.tab-container .clearfix .tab-item {
  float: left;
  line-height: 60rpx;
  padding-left: 40rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(90,90,90,1);
  position: relative;
}

.tab-container .clearfix .tab-item:first-child {
  padding: 0;
}

.tab-container .clearfix .tab-item:last-child {
  padding-right: 30rpx;
}

.tab-container .clearfix .tab-item.active:before {
  content: '';
  width: 40rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #0CCD9A;
  position: absolute;
  left: 50%;
  bottom: -2rpx;
  transform: translateX(-50%) translateX(20rpx);
}

.tab-container .clearfix .tab-item.active:first-child:before {
  transform: translateX(-50%);
}

.list-container {
  margin-top: 40rpx;
  max-height: 1000rpx;
  padding: 0 0 50rpx;
}

.list-container-inner {
  padding: 0 40rpx;
}

.list-container-inner .item:not(:first-child) {
  margin-top: 40rpx;
}

.author-container {
  position: relative;
  padding: 0 50rpx 0 120rpx;
}

.author-container .avatar {
  position: absolute;
  top: 0;
  left: 0;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.author-container .name {
  width: 450rpx;
  font-size:36rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(4,4,4,1);
  line-height:50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.author-container .date {
  margin-top: 10rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(173,173,173,1);
  line-height:33rpx;
}

.author-container .more {
  width: 60rpx;
  height: 90rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.author-container .more image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.more-modal .mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, .6);
}

.more-modal .modal-inner {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
  background:rgba(255,255,255,1);
  border-radius:40rpx 40rpx 0px 0px;
  padding: 25rpx 40rpx 60rpx;
}

.more-modal .modal-inner .item {
  margin-top: 40rpx;
  width: 25%;
  float: left;
  text-align: center;
  position: relative;
}

.more-modal .modal-inner .item image {
  width: 54rpx;
  height: 54rpx;
  display: block;
  margin: 0 auto;
}

.more-modal .modal-inner .item view {
  margin-top: 20rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(113,113,113,1);
  line-height:40rpx;
}

.more-modal .modal-inner .item .open-type {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: transparent;
}

.more-modal .modal-inner .close-more-modal {
  margin-top: 25rpx;
  line-height:100rpx;
  text-align: center;
  background:rgba(242,242,242,1);
  border-radius:55rpx;
  font-size:34rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(4,4,4,1);
}