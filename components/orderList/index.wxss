.container {
  background: #fff;
  padding-left: 30rpx;
}

.clearfix:before {
  content: ' ';
  display: table !important;
}
.clearfix:after {
  content: ' ';
  display: table !important;
  clear: both;
}

.tab-container {
  overflow-x: auto;
  padding: 30rpx;
}

.tab-container .clearfix .tab-item {
  float: left;
  line-height: 60rpx;
  padding-left: 40rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(90,90,90,1);
}

.tab-container .clearfix .tab-item:first-child {
  padding: 0;
}

.tab-container .clearfix .tab-item:last-child {
  padding-right: 30rpx;
}

.tab-container .clearfix .tab-item.active {
  font-weight: 600;
}

.container .item {
  height: 180rpx;
  background: #fff;
  padding: 22rpx 160rpx 22rpx 166rpx;
  position: relative;
}

.container .item:not(:last-child) {
  border-bottom: 1rpx solid #B4B4B4;
}

.cover {
  position: absolute;
  width: 136rpx;
  height: 136rpx;
  top: 22rpx;
  left: 0;
}

.date {
  position: absolute;
  top: 22rpx;
  right: 30rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(180,180,180,1);
  line-height:42rpx;
  letter-spacing:1rpx;
}

.code {
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(57,57,62,1);
  line-height:42rpx;
  letter-spacing:1rpx;
}

.price {
  margin-top: 10rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(57,57,62,1);
  line-height:42rpx;
  letter-spacing:1rpx;
}

.price:before {
  content: '￥';
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(57,57,62,1);
  line-height:42rpx;
  letter-spacing:1rpx;
  margin-right: 5rpx;
}

.status {
  margin-top: 10rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(57,57,62,1);
  line-height:33rpx;
  letter-spacing:1rpx;
}

.status.need-pay:before {
  content: '待支付';
  color:rgba(255,51,40,1);
}

.status.has-pay:before {
  content: '订单完成';
}

.status.cancel-pay:before {
  content: '已取消';
}