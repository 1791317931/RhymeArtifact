.study-article-container .item {
  margin-top: 40rpx;
  background: #fff;
  padding: 20rpx 40rpx 0;
}

.study-article-container .item:first-child {
  margin-top: 0;
}

.study-article-container .item .head-info {
  height: 90rpx;
  padding: 0 0 0 110rpx;
  position: relative;
}

.study-article-container .item .head-info .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
}

.study-article-container .item .head-info .info {
  width: 400rpx;
}

.study-article-container .item .head-info .info .name {
  font-size:36rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(4,4,4,1);
  line-height:50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.study-article-container .item .head-info .info .time {
  margin-top: 10rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(173,173,173,1);
  line-height:33rpx;
}

.study-article-container .item .head-info .follow {
  width:150rpx;
  height:56rpx;
  line-height:56rpx;
  background:rgba(9,205,154,1);
  border-radius:55px;
  position: absolute;
  top: 25rpx;
  right: 0;
  text-align: center;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.study-article-container .item .head-info .follow.acitve {
  background: #ff5c5c;
}

.content-container {
  height: 200rpx;
  margin-top: 30rpx;
  padding: 0 0 0 224rpx;
  position: relative;
}

.study-article-container .item .content-image {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
  border-radius:20rpx;
}

.title {
  font-size:40rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(4,4,4,1);
  line-height:56rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
}

.study-article-container .item .title {
  margin: 30rpx 0;
  font-size:38rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  line-height:50rpx;
  letter-spacing:1rpx;
  word-break: break-all;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
}