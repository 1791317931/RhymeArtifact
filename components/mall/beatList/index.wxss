.clear:before, .clear:after, .clearfix:before, .clearfix:after {
  content: ' ';
  display: table;
}
.clear:after, .clearfix:after {
  clear: both;
}

.container .item {
  width: 374rpx;
  height: 573rpx;
  float: left;
  background: #fff;
  border: 1rpx solid #F7F7F7;
  margin-top: 2rpx;
  padding-top: 30rpx;
}

.container .item:nth-child(2n) {
  margin-left: 2rpx;
}

.item .cover-container {
  width: 314rpx;
  height: 314rpx;
  margin: 0 auto;
  position: relative;
}

.item .cover-container .cover {
  display: block;
  width: 100%;
  height: 100%;
}

.item .cover-container .to-play {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 73rpx;
}

.item .detail-container {
  height: 233rpx;
  padding: 26rpx 20rpx 30rpx;
  position: relative;
}

.item .name {
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(29,29,29,1);
  line-height:42rpx;
  letter-spacing:1rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .user-name {
  margin-top: 16rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  line-height:37rpx;
  letter-spacing:1rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .price {
  position: absolute;
  left: 20rpx;
  right: 50%;
  bottom: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .price .unit {
  font-size:30rpx;
  font-family:DIN-Bold;
  font-weight:bold;
  color:rgba(29,29,29,1);
  line-height:36rpx;
}

.item .price .count {
  font-size:50rpx;
  font-family:DINAlternate-Bold;
  font-weight:bold;
  color:rgba(29,29,29,1);
  line-height:58rpx;
}

.item .buy {
  position: absolute;
  right: 20rpx;
  left: 50%;
  bottom: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}

.item .buy text {
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:58rpx;
  letter-spacing:1rpx;
}