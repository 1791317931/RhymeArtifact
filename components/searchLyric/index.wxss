/* components/searchLyric/index.wxss */
.searchLyric_bottom {
  padding-bottom: 280rpx;
}
.searchLyric_placement_bottom {
  position: fixed;
  background-color: #fff;
  bottom: 0;
  padding: 24rpx 0 52rpx 0;
  z-index: 20;
}

.searchLyric_container {
  position: relative;
  padding: 0 30rpx;
}
.searchLyric_container input {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 0 0 84rpx;
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid rgba(0,0,0,1);
}
.searchLyric_container image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 58rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
}

.rhyme-groups {
  margin-top: 30rpx;
  padding: 0 15rpx;
  font-size: 0;
  text-align: center;
}

.rhyme-groups button {
  display: inline-block;
  width: 210rpx;
  height: 80rpx;
  line-height: 80rpx;
  background:rgba(255,255,255,1);
  border-radius:16rpx;
  border: 2rpx solid rgba(0,0,0,1);
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  margin: 0 15rpx;
}

.rhyme-groups button.active {
  background: #000;
  border-color: #000;
  color: #fff;
}

.searchLyric_list {
  margin: 30rpx 20rpx 0;
  font-size: 0;
  max-height: 330rpx;
  overflow: scroll;
}

.searchLyric_list.searchLyric_list_bottom {
  max-height: none;
  overflow: normal;
}

.searchLyric_list button {
  display: inline-block;
  margin: 10rpx;
  padding: 0 22rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  letter-spacing:1rpx;
  background: #fff;
  border-radius:16rpx;
}

.wechat_btn {
  width:250rpx;
  height:88rpx;
  background:rgba(255,255,255,1);
  border-radius:16rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(29,29,29,1);
  line-height:88rpx;
  letter-spacing:1rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: 0 0 0 -125rpx;
}

.modal {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 30;
}

.modal .mask {
  background:rgba(0, 0, 0, .5);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.modal .content {
  position: absolute;
  width:614rpx;
  height:659rpx;
  left: 50%;
  top: 50%;
  margin: -330rpx 0 0 -307rpx;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  text-align: center;
}

.tips {
  font-size:34rpx;
  font-weight:600;
  color:rgba(35,35,35,1);
  line-height:48rpx;
  letter-spacing:1rpx;
  display: block;
  margin: 44rpx 0 96rpx;
}

.article {
  font-size:38rpx;
  font-weight:600;
  color:rgba(35,35,35,1);
  line-height:53rpx;
  letter-spacing:1rpx;
}

.special {
  color: #FF3328;
}

.modal .content .ok {
  display: block;
  margin: 86rpx auto 52rpx;
  width:454rpx;
  height:78rpx;
  background:rgba(6,6,6,1);
  border-radius:6rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:78rpx;
  letter-spacing:1rpx;
}

.modal .content .cancel {
  background-color: transparent;
  font-size:28rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:40px;
  letter-spacing:1px;
}