<view class="study-video-container">
  <view wx:for="{{studyVideoPage.list}}" wx:for-item="item" wx:for-index="index" wx:key="{{item.id}}" data-index="{{index}}"
    class="item" catchtap="clickStudyVideoItem">
    <view class="poster">
      <image src="{{item.course_cover}}"/>
      <view class="modal">
        <image src="/assets/imgs/to-play.png"/>
        <view class="title">{{item.course_title}}</view>
      </view>
    </view>
    <view class="operation-container clearfix">
      <view class="btn collection" 
        data-index="{{index}}" 
        catchtap="toggleVideoCollectionItem">
        <image hidden="{{item.is_collection == 1 ||  studyVideoPage.showCollection}}" src="/assets/imgs/collection.png"/>
        <image hidden="{{item.is_collection != 1 && !studyVideoPage.showCollection}}" src="/assets/imgs/collection-active.png"/>
        <text>{{item.collection_num}}</text>
      </view>
      <view class="btn share" catchtap="clickShare">
        <image src="/assets/imgs/wechat-share.png"/>
        <text>微信分享</text>
        <button open-type="share" data-index="{{index}}"></button>
      </view>
      <view class="moments-container" data-index="{{index}}" catchtap="generatePoster">
        <image src="/assets/imgs/moments.png"/>
        <text>海报分享</text>
      </view>
    </view>
  </view>
</view>
<empty 
  class="mt20"
  loading="{{studyVideoPage.loading}}"
  hasData="{{!!studyVideoPage.list.length}}"
  hasMore="{{studyVideoPage.current_page < studyVideoPage.total_pages}}"/>