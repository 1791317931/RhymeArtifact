/* components/createMusicList/index.wxss */
.createMusicList_list {
  padding: 30rpx 20rpx 30rpx;
}

.createMusicList_item {
  background: #fff;
  border-radius:14rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.hide {
  display: none;
}

.createMusicList_item_name {
  padding: 0 20rpx;
}

.createMusicList_item_name > view {
  height: 120rpx;
  line-height: 120rpx;
  position: relative;
  font-size:32rpx;
  font-weight:500;
  color:rgba(29,29,29,1);
  letter-spacing:1rpx;
  border-bottom: 1rpx solid rgb(231, 231, 231);
  padding-left: 136rpx;
}

.createMusicList_item_name > view image {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 50%;
}

.createMusicList_item_content {
  padding: 40rpx 20rpx;
}

.createMusicList_item_info {
  display: flex;
}

.createMusicList_item_status {
  width: 130rpx;
  height: 130rpx;
  position: relative;
}

.createMusicList_item_status image {
  width: 100%;
  height: 100%;
}

.createMusicList_item_status image:not(:first-child) {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 32rpx;
}

.createMusicList_item_status image:nth-child(2) {
  left: 41rpx;
}

.createMusicList_item_status image:nth-child(3) {
  left: 37rpx;
}

.createMusicList_item_detail {
  flex: 1;
  padding: 16rpx 20rpx;
  min-height: 130rpx;
  color:rgba(29,29,29,1);
  line-height:34rpx;
  letter-spacing:1rpx;
}

.createMusicList_item_detail .title {
  font-size:32rpx;
  font-weight:500;
  line-height: 46rpx;
}

.createMusicList_item_detail .detail-container {
  margin-top: 10rpx;
  font-size:24rpx;
  font-weight:400;
}

.createMusicList_item_detail .duration {
  margin-top: 10rpx;
  font-size:24rpx;
  font-weight:400;
}

.createMusicList_item_operate {
  margin-top: 30rpx;
  padding: 0 0 0 30rpx;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(29,29,29,1);
}

.createMusicList_item_operate .collection {
  line-height: 32rpx;
  padding: 0 50rpx 0 56rpx;
  position: relative;
  display: inline-block;
}

.createMusicList_item_operate .collection image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.createMusicList_item_operate .share {
  line-height: 32rpx;
  padding: 0 0 0 52rpx;
  position: relative;
  display: inline-block;
}

.createMusicList_item_operate .share image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.createMusicList_item_operate .share button {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: transparent;
}

.createMusicList_item_operate .remove {
  line-height: 32rpx;
  padding: 0 0 0 52rpx;
  position: absolute;
  display: inline-block;
  right: 20rpx;
  top: 52rpx
}

.createMusicList_item_operate .remove image {
  width: 50rpx;
  height: 50rpx;
}