.hide {
  display: none;
}

.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 10000;
}

.loading {
  height: 30rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 0 0 0 40rpx;
}

@keyframes image-rotate {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading image {
  width: 30rpx;
  height: 30rpx;
  animation: image-rotate 1s linear infinite;
  position: absolute;
  left: 0;
  top: 0;
  transform: translateY(-50%);
}

.loading .msg {
  color: #fff;
  line-height: 30rpx;
  font-size: 20rpx;
}