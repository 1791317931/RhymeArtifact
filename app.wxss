/**app.wxss**/
page {
  height: 100%;
  background: rgb(247, 247, 247);
}

view, image, input, textarea, button {
  box-sizing: border-box;
}

button:after {
  border: 0;
}

.z-modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 9999;
}

.z-modal-body {
  width: 80%;
  height: 60%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #ffffff;
  padding: 20rpx 0;
  border-radius: 10rpx;
  overflow-y: auto;
}

.flex {display: flex;}
.text-fixed {
  text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
.text-center {text-align: center;}
.text-right {text-align: right;}
.relative {position: relative;}
.absolute {position: absolute;}
.pull-left {float: left;}
.pull-right {float: right;}
.clearfix:before {
  content: ' ';
  display: table !important;
}
.clearfix:after {
  content: ' ';
  display: table !important;
  clear: both;
}

.table {display: table !important; table-layout: fixed; width: 100%;}
.table-row {display: table-row !important;}
.table-cell, .cell {display: table-cell !important; vertical-align: middle;}

.empty {
  display: table;
  width: 100%;
  height: 120rpx;
  text-align: center;
}
.empty:empty:before {
  content: '暂无数据';
  display: table-cell;
  vertical-align: middle;
  font-size: 28rpx;
  color: #525252;
}
.empty.loading:empty:before {
  content: '数据加载中...';
}
.empty.no-more-data:empty:before {
  content: '没有更多数据了';
}
.hide {display: none !important;}
.invisible {visibility: hidden !important;}

.mt10 {margin-top: 10rpx !important;}
.mt20 {margin-top: 20rpx !important;}
.mt30 {margin-top: 30rpx !important;}
.mt40 {margin-top: 40rpx !important;}
.mt50 {margin-top: 50rpx !important;}

.poster-canvas {
  position: fixed;
  left: 120%;
  top: 120%;
  width: 610px;
  height: 660px;
}

.poster-canvas.music-canvas {
  width: 540px;
  height: 750px;
}

.freestyle-poster-canvas {
  position: fixed;
  left: 120%;
  top: 120%;
  width: 750px;
  height: 1334px;
}

.ad {
  width: 100% !important;
  height: 180rpx !important;
  border-radius: 20rpx !important;
}

.input-placeholder {
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(173,173,173,1);
}