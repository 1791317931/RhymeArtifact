/**app.wxss**/
page {
  height: 100%;
  background: rgb(247, 247, 247);
}

view, image, input, textarea, button {
  box-sizing: border-box;
}

button:after {
  border: 0;
}

.z-modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 9999;
}

.z-modal-body {
  width: 80%;
  height: 60%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #ffffff;
  padding: 20rpx 10rpx;
  border-radius: 10rpx;
  overflow-y: auto;
}

.text-center {text-align: center;}
.text-right {text-align: right;}
.relative {position: relative;}
.absolute {position: absolute;}
.pull-left {float: left;}
.pull-right {float: right;}
.clearfix:before {
  content: ' ';
  display: table;
}
.clearfix:after {
  content: ' ';
  display: table;
  clear: both;
}

.table {display: table !important; table-layout: fixed; width: 100%;}
.table-row {display: table-row !important;}
.table-cell, .cell {display: table-cell !important; vertical-align: middle;}

.empty {
  display: table;
  width: 100%;
  height: 80rpx;
  text-align: center;
}
.empty:empty:before {
  display: table-cell;
  vertical-align: middle;
  font-size: 28rpx;
  color: #525252;
}
.hide {display: none !important;}