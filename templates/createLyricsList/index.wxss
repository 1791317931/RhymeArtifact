.create-lyrics-list-container .lyrics-item {
  padding: 20rpx 30rpx 25rpx;
  background: #fff;
  border-radius:14rpx;
  position: relative;
}

.create-lyrics-list-container .lyrics-item:not(:first-child) {
  margin-top: 30rpx;
}

.create-lyrics-list-container .lyrics-item .create-time {
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:rgba(119,119,119,1);
  line-height:34rpx;
  letter-spacing:1rpx;
}

.create-lyrics-list-container .lyrics-item .title {
  margin-top: 25rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(29,29,29,1);
  line-height:46rpx;
  letter-spacing:1rpx;
}

.create-lyrics-list-container .lyrics-item .share {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}